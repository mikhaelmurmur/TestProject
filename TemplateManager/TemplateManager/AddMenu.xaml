<Window x:Class="TemplateManager.AddMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddMenu" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Margin="5" Content="Open image" Click="Button_Click"/>
        <Image x:Name="iTemplate" Grid.Row="1" Margin="5,40"/>
        <Button Grid.Row="1" Grid.Column="1" Height="30" Margin="5" VerticalAlignment="Bottom" Content="Save template"/>
    </Grid>
</Window>
